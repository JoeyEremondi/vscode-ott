{
    "name": "ott",
    "displayName": "ott",
    "description": "Ott formatting, typechecking, and syntax highlighting",
    "version": "0.0.6",
    "publisher": "JoeyEremondi",
    "repository": "https://github.com/JoeyEremondi/vscode-ott",
    "icon": "media/icon.png",
    "engines": {
        "vscode": "^1.19.0"
    },
    "keywords": [
        "semantics",
        "Programming languages",
        "Coq",
        "Isabelle/HOL",
        "LaTeX"
    ],
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:ott"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "ott",
                "aliases": [
                    "Ott",
                    "ott"
                ],
                "extensions": [
                    ".ott"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ott",
                "scopeName": "source.ott",
                "path": "./syntaxes/ott.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ott configuration",
            "properties": {
                "ott.ott_command": {
                    "type": ["string"],
                    "default": "ott",
                    "description": "Command used to invoke ott"
                },
                "ott.check_output": {
                    "type": ["boolean"],
                    "default": "true",
                    "description": "Should the files Ott generates be checked after linting? (Currently only supports .v)"
                },
                "ott.output_source_locs": {
                    "type": ["boolean"],
                    "default": "true",
                    "description": "Should generated files have comments with corresponding Ott locations? (if false, disables output checking)"
                },
                "ott.lint_on_save": {
                    "type": ["boolean"],
                    "default": "true",
                    "description": "Should Ott be invoked every time the file is saved?"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}